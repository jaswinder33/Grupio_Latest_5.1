<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/logistics_child_height"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/checkbox"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="16dp"
            android:text="Hi This is sample message with sample text on it."
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:id="@+id/alarmLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/alarmTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23-Nov-2016 11:14(EDT)"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/remindertodo" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>