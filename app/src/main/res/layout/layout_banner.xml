<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bannerLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bannerImageViewId"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_header_height"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bannerImageViewId2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_header_height"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/searchBarBgId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGray"
        android:padding="10dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/exhibitor_filter_edtTxt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/searchbar_ht"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_search"
            android:ellipsize="end"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/searchbar_padd_left"
            android:paddingRight="10dp"
            android:singleLine="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dateBtnLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchbar_ht"
        android:background="@color/LightGray"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/prevBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_left_arrow" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="26-11-2016" />

        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_right_arrow" />

    </LinearLayout>

</LinearLayout>