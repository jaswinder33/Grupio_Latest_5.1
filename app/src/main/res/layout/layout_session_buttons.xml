<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sessionFunLay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@color/greytransparent"
    android:padding="10dp"
    android:visibility="gone">

    <Button
        android:id="@+id/addFavSessionBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/msg_btn_ht"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_addtoschedule_off_detail" />

    <Button
        android:id="@+id/shareSocialBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/msg_btn_ht"
        android:layout_centerInParent="true"
        android:background="@drawable/share" />

    <Button
        android:id="@+id/noteSocialBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/msg_btn_ht"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/note" />
</RelativeLayout>

